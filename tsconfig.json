{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    // "paths": {
    //   "~*": ["./*"],
    //   "@/components/*":["components/*"]
    // },
    "paths": {
      "@components/*": ["components/*"],
      "@layouts": ["/layouts"],
      "@assets/*": ["/assets/*"],
      "@data/*": ["/data/*"],
      "@global/*": ["/global/*"],
      "@slices/*": ["/global/slices/*"],
      "@hooks": ["/hooks"],
      "@utils/*": ["/utils/*"],
      "@public/*": ["/public/*"],
      "@styled": ["/styled"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "../test/opencart.api.ts"  ],
  "exclude": [
    "node_modules"
  ],
  
}
